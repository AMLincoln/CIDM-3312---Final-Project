@page
@model CIDM_3312___Final_Project.Pages.WildfireAdvisories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WildfireAdvisory.WildfireAdvisoryId" />
            <div class="form-group">
                <label asp-for="WildfireAdvisory.Title" class="form-label"></label>
                <input asp-for="WildfireAdvisory.Title" class="form-control" />
                <span asp-validation-for="WildfireAdvisory.Title" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="WildfireAdvisory.IssueDateAndTime" class="form-label"></label>
                <input asp-for="WildfireAdvisory.IssueDateAndTime" class="form-control" />
                <span asp-validation-for="WildfireAdvisory.IssueDateAndTime" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="WildfireAdvisory.Description" class="form-label"></label>
                <input asp-for="WildfireAdvisory.Description" class="form-control" />
                <span asp-validation-for="WildfireAdvisory.Description" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="WildfireAdvisory.IssuingAuthority" class="form-label"></label>
                <input asp-for="WildfireAdvisory.IssuingAuthority" class="form-control" />
                <span asp-validation-for="WildfireAdvisory.IssuingAuthority" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="WildfireAdvisory.ContactPhoneNumber" class="form-label"></label>
                <input asp-for="WildfireAdvisory.ContactPhoneNumber" class="form-control" />
                <span asp-validation-for="WildfireAdvisory.ContactPhoneNumber" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label class="form-label">Region(s):</label>
                <br/>
                @foreach(var region in Model.WildfireAdvisory.RegionWildfireAdvisories!)
                {
                    <form method="post">
                    <input type="hidden" asp-for="RegionIdToDelete" value="@region.Region.RegionId" />
                        @region.Region.Name &emsp; <input type="submit" Value="Remove" class="btn btn-danger btn-sm my-1" asp-page-handler="RemoveRegion" asp-route-id="@Model.WildfireAdvisory.WildfireAdvisoryId">
                    </form>
                }
            </div> 
        </form>
        <br/>
        <form method="post">
            <input type="hidden" asp-for="WildfireAdvisory.WildfireAdvisoryId"/>
            <div class="form-group">
                <select asp-items="Model.RegionsDropDown" asp-for="RegionIdToAdd" class="form-control">
                    <option value="">--Select a region</option>
                </select>
                <span asp-validation-for="RegionIdToAdd" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}